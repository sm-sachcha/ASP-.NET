
@{
    ViewBag.Title = "AssignedOrderList";
}

<h2>Assigned Order List</h2>
<br>

<table class="table table-bordered">
    <tr class="btn-warning">
        <th>ID</th>
        <th>Food Type</th>
        <th>Presarvation Time (Hour)</th>
        <th>Packet Number</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Foodtype</td>
            <td>@item.PreservationHour</td>
            <td>@item.PacketCount</td>
            @{
                var status = "";
                if (@item.Assign != null && @item.Status == 0)
                {
                    status = "Assigned Staff";
                }
                else
                {
                    if (@item.Status == 0)
                    {
                        status = "Request Submitted";
                    }
                    else
                    {
                        status = "Collected and Distributed";
                    }
                }
            }
            <td>@status</td>
        </tr>
    }
</table>

<form action="" method="post">
    <div class="form-group">
        <label for="ordernumber">Order Number</label>
        <input class="form-control" type="text" id="order-number" name="ordernumber" placeholder="Enter Order Number" required>
    </div>
    <button class="btn btn-success btn-block" type="submit">Confirm</button>
</form>



